<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="PathToolsRSE.copyPathCommand"
            name="Copy Path">
         <defaultHandler
               class="pathtoolsrse.CopyPathHandler">
         </defaultHandler>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="PathToolsRSE.copyPathCommand"
            icon="icons/copypaths.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
		 <separator
               name="PathToolsRSE.separator"
               visible="true">
         </separator>
         <command
               commandId="PathToolsRSE.copyPathCommand"
               label="Copy Path"
               style="push">
		<visibleWhen
                  checkEnabled="false">
               <with 
            variable="selection"> 
         <iterate 
               operator="or"> 
            <instanceof
                  value="org.eclipse.rse.subsystems.files.core.subsystems.IRemoteFile">
            </instanceof> 
         </iterate> 
      </with> 
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
