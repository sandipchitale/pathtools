<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="PathTools.actionSet.toolbar"
            label="Path Tools"
            visible="true">
         <menu
               id="pathtools"
