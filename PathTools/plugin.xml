	         </or>
      		</enablement>
         </action>
         <action
               class="pathtools.ExploreAction"
               enablesFor="1"
               icon="icons/explore.gif"
               id="PathTools.Explore"
               label="Explore"
               menubarPath="pathtools/additions"
               style="push">
            <enablement>
	         <or>
	            <objectClass 
	               name="org.eclipse.core.resources.IResource"/>
	            <objectClass 
	               name="org.eclipse.core.runtime.IAdaptable"/>
	         </or>
      		</enablement>
         </action>
         <action
               class="pathtools.CopyPathAction"
               enablesFor="+"
               icon="icons/copypaths.gif"
               id="PathTools.CopyPath"
               label="Copy Paths"
               menubarPath="pathtools/additions"
               style="push">
			<enablement>
	         <or>
	            <objectClass 
	               name="org.eclipse.core.resources.IResource"/>
	            <objectClass 
	               name="org.eclipse.core.runtime.IAdaptable"/>
	         </or>
      		</enablement>
     	</action>   
		<visibility>
         <or>
            <objectClass 
               name="org.eclipse.core.resources.IResource"/>
            <objectClass 
               name="org.eclipse.core.runtime.IAdaptable"/>
         </or>
  		</visibility>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="pathtools.WorkbenchPreferencePage"
            id="PathTools.page"
            name="Path Tools">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="pathtools.PathToolsPreferences">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.core.variables.dynamicVariables">
      <variable
            description="Fully qualified path of selection in OS specific format."
            name="path"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Fully qualified path of selection with \ as the separator"
            name="path-backslashes"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Fully qualified path of selection with / as the separator"
            name="path-slashes"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Name of selection."
            name="name"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Extension of selection."
            name="extension"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Fully qualified path of selection&apos;s parent in OS specific format."
            name="parent-path"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Fully qualified path of selection&apos;s parent with / as the separator"
            name="parent-path-slashes"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Name of selection sans extension."
            name="name-sans-extension"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Fully qualified path of selection&apos;s parent with \ as the separatorrator"
            name="parent-path-backslashes"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Name of selection&apos;s parent"
            name="parent-name"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Name of selection&apos;s parent sans extension."
            name="parent-name-sans-extension"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
      <variable
            description="Extension of selection&apos; parent."
            name="parent-extension"
            resolver="pathtools.PathToolsVariableResolver"
            supportsArgument="false">
      </variable>
   </extension>
</plugin>
